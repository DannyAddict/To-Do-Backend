<img class= "backsize1" src= "https://s-media-cache-ak0.pinimg.com/originals/b3/db/09/b3db09d4dd668a77267e9e9f11e0778d.jpg" height="100%" width="100%">
<div>    
    <h1 class= "todolist">To-Do List</h1>
    <div><strong class= "yan">To-Do App</strong></div>
            <br>
    <% @todos.each do |todo| %>
        <li>
            <input class="nodot" type= "checkbox" name=""/>
            <a href= "todo/show/<%=todo.id %>"><%= todo.description %>
            <span class= "pomodoro_estimate small-pomodoro-estimate"><%= todo.pomodoro_estimate %> Pomodoros</span>
            </a>
        </li>
    <% end %>
            <br>
        <div id= "new-todo-block">
            <a href= "/todo/new" class= "button add-new-todo-button" id= "add-new-todo-button">Add a todo</a>
        </div>
  
</div>